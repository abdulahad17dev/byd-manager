<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Фон -->
    <solid android:color="@color/output_background" />

    <!-- Рамка -->
    <stroke
        android:width="1dp"
        android:color="@color/output_border" />

    <!-- Скругленные углы -->
    <corners android:radius="8dp" />

    <!-- Внутренние отступы -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>