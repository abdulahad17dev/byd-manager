<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#000000">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Control ADB"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#333"
        android:layout_marginBottom="24dp" />

    <!-- Статус подключения ADB -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/button_blue"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔄 Проверка ADB..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF9800" />

        <Button
            android:id="@+id/btnCheckStatus"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Проверить"
            android:textSize="12sp"
            android:minHeight="36dp"
            style="?android:attr/buttonStyleSmall" />
    </LinearLayout>

    <!-- Кнопки подключения ADB -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Подключиться к ADB"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:background="@color/button_blue"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Отключить"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:background="@color/button_blue"
            android:textColor="@color/white"
            android:enabled="false" />
    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        android:layout_margin="8dp" />

    <!-- Заголовок для app_process -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Управление app_process"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="8dp" />

    <!-- Статус app_process -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/button_blue"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvAppProcessStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⚫ ADB не подключен"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666" />

        <Button
            android:id="@+id/btnCheckAppProcess"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Проверить"
            android:textSize="12sp"
            android:minHeight="36dp"
            android:enabled="false"
            style="?android:attr/buttonStyleSmall" />
    </LinearLayout>

    <!-- Кнопки управления app_process -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnStartAppProcess"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Запустить app_process"
            android:textSize="13sp"
            android:layout_marginEnd="8dp"
            android:background="@color/button_blue"
            android:textColor="@color/white"
            android:enabled="false" />

        <Button
            android:id="@+id/btnStopAppProcess"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Остановить"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:background="@color/button_blue"
            android:textColor="@color/white"
            android:enabled="false" />
    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        android:layout_margin="8dp" />

    <!-- Заголовок для Bluetooth команд -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Управление Bluetooth"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="16dp" />

    <!-- Кнопки Bluetooth -->
    <Button
        android:id="@+id/btnEnableBt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="🔵 Включить Bluetooth"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        android:background="@color/button_blue"
        android:textColor="@color/white"
        android:enabled="false" />

    <Button
        android:id="@+id/btnDisableBt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="⚫ Выключить Bluetooth"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:background="@color/button_blue"
        android:textColor="@color/white"
        android:enabled="false" />

    <!-- Инструкции -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 Подсказка:\n\n1. Подключитесь к ADB\n2. Запустите app_process для доступа к системным сервисам\n3. Используйте команды управления автомобилем\n\nДля настройки ADB:\n• Включите отладку по Wi-Fi в настройках разработчика\n• Выполните: adb tcpip 5555"
        android:textSize="12sp"
        android:textColor="#666"
        android:background="#fff"
        android:padding="16dp"
        android:layout_marginTop="8dp" />

</LinearLayout>